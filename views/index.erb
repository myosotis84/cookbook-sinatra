<h1>Welcome to the Cookbook</h1>
<p>Here are the recipes:</p>
<ul>
  <% @recipes.each_with_index do |recipe, recipe_index| %>
    <li>
      <% if recipe.done? %>
        [x]
      <% else %>
        [ ]
      <% end %>
      <%= recipe.name %> | <a href="/recipes/<%= recipe_index %>/done">Mark as done</a> | <a href="/recipes/<%= recipe_index %>">Delete</a>
    </li>
  <% end %>
</ul>
<div id="actions">
  <a href="/new">Create a recipe</a>
  <a href="/search">Import a recipe from LetsCookFrench</a>
</div>
